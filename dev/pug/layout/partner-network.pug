include ../helpers/mixins
block variables

doctype html
html(lang="ru-RU")
	head
		meta(charset="utf-8")
		title #{title}
		<!--[if IE]>
		meta(http-equiv='X-UA-Compatible', content="IE = edge")
		<![endif]-->
		meta(name="viewport" content="width=device-width,initial-scale=1")
		meta(name="keywords" content="")
		link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous")
		link(rel="stylesheet" type='text/css' href="static/css/styles.css")
		link(rel="preconnect" href="https://fonts.googleapis.com")
		link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
		link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet")

	body.body
		main.main
			section.net-intro
				.net-intro__wrapper
					picture.net-intro__frame
						source(media="(min-width: 1200px)" srcset="static/image/content/new-intro-bg.webp" type="image/webp")
						source(media="(min-width: 1200px)" srcset="static/image/content/new-intro-bg.jpg")
						source(srcset="static/image/content/new-intro-bg-mb.webp" type="image/webp")
						img(src="static/image/content/new-intro-bg-mb.webp" alt="Simple Partner Network Image")
					.net-intro__info
						h1.net-intro__title Партнёрская сеть
						b.net-intro__subtitle Wine and Whiskey by Simple
			section.net-stores
				.net-stores__wrapper
					ul.net-stores__list
						li.net-stores__item.is-collapsed
							
		script(src="static/js/vendor/jquery-3.3.1.min.js")
		script(src="static/js/main.js")
		block script
