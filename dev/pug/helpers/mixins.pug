mixin netItemSingle(city, image, galleryImage1, galleryImage2, galleryImage3, address, phoneLink, phone, timing, link, reviewImage, reviewText, reviewAuthor, mapLink)
    li(class="net-stores__item net-item is-collapsed single")
        <!--Front side of card-->
        .net-item__inner.js-expander
            picture.net-item__frame
                source(srcset="static/images/content/" +image +".webp" type="image/webp")
                img(src="static/images/content/" +image + ".jpg" alt="Винная студия - " +city).net-item__frame-image
            h3.net-item__title=city
        <!--Back side of card-->
        .net-item__content
            button(type="button").net-item__content-closer.js-collapser
            
            h2.net-item__address=address
            
            
            .net-item__gallery
                .net-item__slider.net-swiper-container
                    .swiper-wrapper
                        picture.net-item__slider-item.swiper-slide
                            source(srcset="static/images/content/" +galleryImage1 +".webp" type="image/webp")
                            img(src="static/images/content/" +galleryImage1 + ".jpg" alt="Винная студия - " +city)
                        picture.net-item__slider-item.swiper-slide
                            source(srcset="static/images/content/" +galleryImage2 +".webp" type="image/webp")
                            img(src="static/images/content/" +galleryImage2 + ".jpg" alt="Винная студия - " +city)
                        picture.net-item__slider-item.swiper-slide
                            source(srcset="static/images/content/" +galleryImage3 +".webp" type="image/webp")
                            img(src="static/images/content/" +galleryImage3 + ".jpg" alt="Винная студия - " +city)
                .net-item__gallery-controls
                    button(type="button").net-item__gallery-prev
                    button(type="button").net-item__gallery-next
            <!--Информация о винотеке-->
            ul.net-item__list
                li.net-item__line
                    b.net-item__name Адрес
                    span.net-item__data=address
                li.net-item__line
                    b.net-item__name Телефон
                    a(href="tel:+" +phoneLink target="_self").net-item__data=phone
                li.net-item__line
                    b.net-item__name Время работы
                    span.net-item__data=timing
                li.net-item__line
                    b.net-item__name Instagram
                    a(href="#" target="_self").net-item__data
                        i.fab.fa-instagram
            <!--Отзыв-->
            .net-item__review
                picture.net-item__review-frame
                    source(srcset="static/images/content/" +reviewImage +".webp" type="image/webp")
                    img(src="static/images/content/" +reviewImage + ".jpg" alt="Винная студия - " +city)
                .net-item__review-info
                    p.net-item__review-text=reviewText
                    span.net-item__review-author=reviewAuthor
            <!--Управление-->
            .net-item__controls
                button(type="button").net-item__controls-btn.js-vacant Работать здесь
                button(type="button").net-item__controls-btn.js-map Как добраться
                a(href="#" target="_self").net-item__controls-link Франшиза
            .net-item__map
                iframe(src="" +mapLink allowfullscreen="" loading="lazy").net-item__map-frame
            
