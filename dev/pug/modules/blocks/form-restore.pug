.popup-restore
    .popup-restore__wrapper
        button(type="button").popup-restore__closer
        form(method="post" action="/" name="restore-password").restore.js-restore-form.step-3
            h3.restore__title Восстановление пароля
            p.restore__description Введите адрес электронной почты, на которую вы регистрировали профиль, и мы отправим вам инструкцию по восстановлению
            ul.restore__list
                li.restore__item.restore__item--first
                    label(for="reg-email").restore__label E-mail
                    input(type="email" name="reg-email" id="reg-email").restore__input
                    span.restore__error.restore__error--mail
                li.restore__item.restore__item--second
                    label(for="new-pass").restore__label Новый пароль
                    input(type="password" name="new-pass" id="new-pass").restore__input
                    span.restore__error.restore__error--pass
                    button(type="button").restore__eye
                li.restore__item.restore__item--second
                    label(for="rep-pass").restore__label Повторите пароль
                    input(type="password" name="rep-pass" id="rep-pass").restore__input
                    span.restore__error.restore__error--check
                    button(type="button").restore__eye
            button(type="submit").restore__btn.js-reset-password Сбросить пароль
            button(type="submit").restore__btn.js-set-password Сменить пароль
