.popup-menu.active
    .popup-menu__wrapper
        button(type="button").popup-menu__closer
        .menu
            .menu__head
                button(type="button" data-tab-name="js-login-form").menu__btn.js-login-btn.active Авторизация
                button(type="button" data-tab-name="js-reg-form").menu__btn.js-reg-btn Регистрация
            .menu__body
                form(method="post" action="/" name="authorization").menu__form.form.js-login-form.active
                    ul.form__list
                        li.form__item
                            label(for="email").form__label E-mail
                            input(type="email" name="email" id="email").form__input
                            span.form__error.form__error--mail
                            span.form__sign
                        li.form__item
                            label(for="password").form__label Пароль 
                            input(type="password" name="password" id="password").form__input 
                            span.form__error.form__error--password
                            span.form__sign
                    a(href="restore.html" target="_self").form__restore Я забыл пароль
                    button(type="submit").form__submit.js-enter-btn Войти
                form(method="post" action="/" name="registration").menu__form.form.js-reg-form
                    ul.form__list
                        li.form__item
                            label(for="name").form__label Имя*
                            input(type="text" id="name" name="name").form__input
                            span.form__error.form__error--name
                            span.form__sign
                        li.form__item
                            label(for="surname").form__label Фамилия*
                            input(type="text" id="surname" name="surname").form__input
                            span.form__error.form__error--surname
                            span.form__sign
                        li.form__item
                            label(for="patronymic").form__label Отчество*
                            input(type="text" id="patronymic" name="patronymic").form__input
                            span.form__error.form__error--patronymic
                            span.form__sign
                        li.form__item
                            label(for="email-reg").form__label E-mail*
                            input(type="email" id="email-reg" name="email-reg" onkeydown="validationMail()").form__input
                            span.form__error.form__error--mreg
                            span.form__sign
                        li.form__item
                            label(for="tel-reg").form__label Телефон*
                            input(type="tel" id="tel-reg" name="tel-reg" onkeydown="validationTel()").form__input.mask-phone
                            span.form__error.form__error--tel
                            span.form__sign
                    button(type="submit").form__submit.js-send-btn Зарегистрироваться
